@model ConferenceProject.Models.ConferenceItem

@{
    ViewData["Title"] = "Delete";
}

<ptitle>Delete</ptitle>
<div style="padding-bottom:2em"></div>

<div class="row">
    <div class="col-md-8">
        <section>
            <div id="panel" class="col-sm-6" >
                <div class="panel">
                    <div class="panel-body p-t-10">

                        <h3>Are you sure you want to delete this Talk?</h3>
                        <div>
                            
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    Title
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model._title)
                                </dd>
                                <dt>
                                    Description
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model._description)
                                </dd>
                                <dt>
                                    Start Time
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model._startTime)
                                </dd>
                                <dt>
                                    End Time
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model._endTime)
                                </dd>
                                <dt>
                                    Location
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model._location)
                                </dd>
                                
                                
                            </dl>

                            <form asp-action="Delete">
                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-default" /> |
                                    <a asp-action="Index">Back to List</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
